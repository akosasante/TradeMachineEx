# Environment Variables for TradeMachineEx
#
# DEVELOPMENT WORKFLOW:
# - Containerized (Recommended): Use docker-compose up (env vars are in docker-compose.yml)
# - Direct Machine: Export these variables in your shell or use direnv
#
# This file is for documentation purposes - variables are pre-configured in docker-compose.yml

# Database Configuration
DATABASE_USER=trader_dev
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=trade_machine
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_POOL_SIZE=10
DATABASE_SCHEMA=public

# Phoenix Configuration
PORT=4000
PHX_HOST=localhost
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret

# Google Sheets Integration
GOOGLE_SHEETS_CREDS_PATH=./sheets_creds.json
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# Logging
LOG_LEVEL=info

# Oban Job Processing
ENABLE_CRON=false
OBAN_MINORS_SYNC_CONCURRENCY=1
OBAN_DRAFT_SYNC_CONCURRENCY=1

# Monitoring (PromEx)
METRICS_PORT=9090
GRAFANA_HOST=http://localhost:3000
GRAFANA_TOKEN=your_grafana_token
GRAFANA_UPLOAD_DASHBOARDS=false